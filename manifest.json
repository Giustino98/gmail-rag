{
  "manifest_version": 3,
  "name": "Gmail RAG Assistant",
  "version": "1.1",
  "description": "RAG-powered Gmail search with Gemini AI integration",
  "permissions": [
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "567474473829-loeoe92b0438qs3dp442k16e0oj515cm.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_popup": "dist/popup.html",
    "default_title": "Gmail RAG Assistant"
  }
}